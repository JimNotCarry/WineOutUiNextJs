{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["features/components/*"],
      "@/styles/*": ["styles/*"],
      "@/public/*": ["public/*"],
      "@/redux/*": ["redux-wineout/*"],
      "@/scripts/*": ["features/scripts/*"],
      "@/graph/*": ["graph/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
, "graph/queries.tss", "graph/query.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
